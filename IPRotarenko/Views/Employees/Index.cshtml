@model IEnumerable<EmployeeViewModel>
@{
    ViewData["Title"] = "Сотрудники";
}

<div class="content-lg container">
    <h2>@ViewData["Title"]</h2>
    <a asp-action="Edit" class="btn btn-success">Создать через Edit </a>
    <a asp-action="Create" class="btn btn-success">Создать через Create </a>
    <hr />
    <table class="table">
        <thead>
            <tr>
                <th>№</th>
                <th>Фамилия</th>
                <th>Имя</th>
                <th>Отчество</th>
                <th>Возраст</th>
                <th>Детали</th>
                <th>Рекадтировать</th>
                <th>Удалить</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
            <tr>
                <td>@employee.Id</td>
                <td>@employee.Name</td>
                <td>@employee.SecondName</td>
                <td>@employee.Patronymic</td>
                <td>@employee.Age</td>
                <td>
                    <a asp-controller="Employees" asp-action="Details" asp-route-Id="@employee.Id">Карточка</a>
                </td>
                <td>
                    <a asp-controller="Employees" asp-action="Edit" asp-route-Id="@employee.Id">Редактировать</a>
                </td>
                <td>
                    <a asp-controller="Employees" asp-action="Delete" asp-route-Id="@employee.Id" class="text-danger">Удалить</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>
